<%-
   hosts = {}
   @servers.each do |server|
     if hosts[server.role].nil?
        hosts[server.role] = [server.ip_address]
     else
        hosts[server.role].push server.ip_address
     end
   end
-%>
<%- hosts.each do | role, ip_addresses | -%>
default['<%= ENV["COOKBOOK"] %>']['<%= role %>_hosts'] = <%= ip_addresses %>
<%- end -%>
